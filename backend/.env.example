# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# BSV Configuration
BSV_NETWORK=testnet
BSV_PRIVATE_KEY=your_private_key_wif_here
BSV_PRICE_USD=50.00

# ARC API Configuration
ARC_API_URL=https://api.taal.com/arc
TAAL_API_KEY=your_taal_api_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tokenrent
MONGODB_TEST_URI=mongodb://localhost:27017/tokenrent_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Payment Configuration
MIN_PAYMENT_AMOUNT=1000
MAX_PAYMENT_AMOUNT=100000000
PAYMENT_CONFIRMATION_BLOCKS=1

# Escrow Configuration
ESCROW_TIMEOUT_BLOCKS=144
ESCROW_MIN_AMOUNT=10000

# HTTP 402 Configuration
HTTP402_DEFAULT_AMOUNT=10000
HTTP402_DEFAULT_EXPIRY=300
ACCESS_TOKEN_EXPIRY=1800

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External Services
IPFS_GATEWAY=https://ipfs.io/ipfs/
IMAGE_UPLOAD_MAX_SIZE=5242880

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@tokenrent.io

# Frontend URL
FRONTEND_URL=http://localhost:3001
