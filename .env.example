# ============================================
# T0kenRent Environment Configuration
# ============================================
# Copy this file to .env.local for development
# Never commit .env.local or files with real credentials

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Connection String
# Local: mongodb://localhost:27017/t0kenrent
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/t0kenrent
MONGODB_URI="mongodb://localhost:27017/t0kenrent"

# ============================================
# HANDCASH CONNECT CONFIGURATION
# ============================================
# Get your app credentials at https://dashboard.handcash.io
# Reference: https://docs.handcash.io/v3/getting-started

# Your HandCash App ID (public - safe to expose)
NEXT_PUBLIC_HANDCASH_APP_ID="your_app_id_here"

# Your HandCash App Secret (KEEP SECRET - server-side only)
HANDCASH_APP_SECRET="your_app_secret_here"

# Redirect URL after authentication
NEXT_PUBLIC_HANDCASH_REDIRECT_URL="http://localhost:3000"

# ============================================
# RELYSIA/REDLY CONFIGURATION
# ============================================
# Alternative wallet provider
# Reference: https://api.relysia.com/docs/static/index.html

RELYSIA_API_KEY="your_relysia_api_key_here"

# ============================================
# BSV BLOCKCHAIN CONFIGURATION
# ============================================

# BSV Network: "main" for mainnet or "test" for testnet
NETWORK="main"

# ARC API Key for transaction broadcast
# Get your API key from https://arc.taal.com/
ARC_API_KEY="mainnet_your_api_key_here"

# WhatsOnChain API (public, no key needed for basic usage)
WHATSONCHAIN_API="https://api.whatsonchain.com/v1/bsv/main"

# ============================================
# OVERLAY NETWORK CONFIGURATION
# ============================================

# Overlay Network URL for transaction submission/lookup
# US Region: https://overlay-us-1.bsvb.tech
# EU Region: https://overlay-eu-1.bsvb.tech
# Asia Region: https://overlay-asia-1.bsvb.tech
OVERLAY_URL="https://overlay-us-1.bsvb.tech"

# ============================================
# HTTP 402 / MICROPAYMENT CONFIGURATION
# ============================================

# Default unlock fee in BSV (e.g., 0.0001 = ~$0.005)
DEFAULT_UNLOCK_FEE_BSV="0.0001"

# Payment expiry time in minutes
PAYMENT_EXPIRY_MINUTES="5"

# Access token validity in minutes
ACCESS_TOKEN_EXPIRY_MINUTES="30"

# WAB (Wallet Address Bridge) Server for payment callbacks
# Set this to your backend URL that receives payment notifications
WAB_SERVER_URL="http://localhost:3000/api/402/callback"

# ============================================
# 1SAT ORDINALS CONFIGURATION
# ============================================

# 1Sat Ordinals API for inscription verification
ONESAT_API_URL="https://ordinals.gorillapool.io/api"

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Next.js Port (default: 3000)
PORT=3000

# Node Environment
NODE_ENV="development"

# Application URL (for production/deployment)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT Secret for session tokens (generate a secure random string)
JWT_SECRET="your_secure_random_string_here_at_least_32_chars"

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate limiting (requests per minute)
RATE_LIMIT_RPM="100"

# ============================================
# OPTIONAL: PRODUCTION SETTINGS
# ============================================

# Enable production logging
# LOG_LEVEL="info"

# Sentry DSN for error tracking
# SENTRY_DSN="https://xxx@sentry.io/xxx"

# Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
